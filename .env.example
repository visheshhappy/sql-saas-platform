# Environment Variables for SQL SaaS Platform Docker Setup
# Copy this file to .env and customize values as needed
# Usage: docker-compose --env-file .env up

################################################################################
# PostgreSQL Configuration
################################################################################
POSTGRES_HOST=postgres
POSTGRES_DB=sqlsaasdb
POSTGRES_USER=sqlsaas
POSTGRES_PASSWORD=sqlsaas123

################################################################################
# Redis Configuration
################################################################################
REDIS_HOST=redis
REDIS_PORT=6379

################################################################################
# Kafka Configuration
################################################################################
KAFKA_BOOTSTRAP_SERVERS=kafka:29092

################################################################################
# Spring Boot Configuration
################################################################################
SPRING_PROFILES_ACTIVE=docker

# Database
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/sqlsaasdb
SPRING_DATASOURCE_USERNAME=sqlsaas
SPRING_DATASOURCE_PASSWORD=sqlsaas123
SPRING_DATASOURCE_DRIVER_CLASS_NAME=org.postgresql.Driver

# JPA
SPRING_JPA_DATABASE_PLATFORM=org.hibernate.dialect.PostgreSQLDialect
SPRING_JPA_HIBERNATE_DDL_AUTO=validate
SPRING_JPA_SHOW_SQL=true

# Flyway
SPRING_FLYWAY_ENABLED=true
SPRING_FLYWAY_BASELINE_ON_MIGRATE=true

# Redis
SPRING_REDIS_HOST=redis
SPRING_REDIS_PORT=6379

# Kafka
SPRING_KAFKA_BOOTSTRAP_SERVERS=kafka:29092

################################################################################
# JVM Configuration
################################################################################
# Adjust memory settings based on your requirements
JAVA_OPTS=-Xms512M -Xmx1024M

# For production, increase memory:
# JAVA_OPTS=-Xms2048M -Xmx4096M

################################################################################
# Application Configuration
################################################################################
SERVER_PORT=9090

################################################################################
# Logging Configuration
################################################################################
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_thp_SQLSAAS=DEBUG

################################################################################
# Actuator Configuration
################################################################################
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus
